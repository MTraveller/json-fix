{
    "RE_TRAILING_COMMA_IN_ARRAY": (
        pattern: r#",\s*(\])"#,
        description: Some("Trailing commas in arrays"),
        category: Some("array"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_DOUBLE_COMMAS": (
        pattern: r#",\s*,+"#,
        description: Some("Double commas in JSON"),
        category: Some("misc"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_DOUBLE_CLOSING_BRACE": (
        pattern: r#"\}\s*\}+"#,
        description: Some("Extra closing braces"),
        category: Some("bracket"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_SMART_QUOTES": (
        pattern: r#"[“”]"#,
        description: Some("Smart quotes (double curly)"),
        category: Some("quote"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_SINGLE_QUOTES": (
        pattern: r#"'([^']*)'"#,
        description: Some("Single quotes used instead of double quotes"),
        category: Some("quote"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_CONCATENATED_JSON_OBJECTS": (
        pattern: r#"\}\s*\{"#,
        description: Some("Concatenated JSON objects without comma"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_ORPHANED_OPEN_BRACE": (
        pattern: r#"\{[^\{\}]*$"#,
        description: Some("Orphaned opening brace at end"),
        category: Some("bracket"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_ORPHANED_CLOSE_BRACE": (
        pattern: r#"^[^\{\}]*\}"#,
        description: Some("Orphaned closing brace at start"),
        category: Some("bracket"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_UNDEFINED": (
        pattern: r#"\bundefined\b"#,
        description: Some("JavaScript-style 'undefined' value"),
        category: Some("js_style"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_CURLY_QUOTES": (
        pattern: r#"[‘’]"#,
        description: Some("Smart quotes (single curly)"),
        category: Some("quote"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_MALFORMED_NESTED_ARRAYS": (
        pattern: r#"\[\s*\[|\]\s*\]|\[\s*\]"#,
        description: Some("Malformed nested arrays"),
        category: Some("array"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_EMPTY_ARRAY_SLOTS": (
        pattern: r#",\s*(,)+"#,
        description: Some("Empty array slots"),
        category: Some("array"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_LEADING_COMMA_IN_ARRAY": (
        pattern: r#"\[\s*,\s*"#,
        description: Some("Leading comma in array"),
        category: Some("array"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_ADJACENT_STRINGS": (
        pattern: r#"s+\""#,
        description: Some("Adjacent strings with no comma"),
        category: Some("quote"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_MISSING_COLON": (
        pattern: r#"\"[^\"]+\"\s+\"[^\"]+\""#,
        description: Some("Missing colon between key and value"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_DOUBLE_COLON": (
        pattern: r#"\"[^\"]+\"\s*::"#,
        description: Some("Double colon in key-value pair"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_CHAINED_STRING_VALUES": (
        pattern: r#"\"[^\"]+\"\s+[^\"]+\""#,
        description: Some("Chained string values without commas"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_MISSING_COMMAS_BETWEEN_PAIRS": (
        pattern: r#"\"[^\"]+\"\s*:\s*\"[^\"]+\"\s+\"[^\"]+\"\s*:"#,
        description: Some("Missing commas between key-value pairs"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_STRAY_COMMA_AFTER_OPENING": (
        pattern: r#"(?:\{|\[)\s*,"#,
        description: Some("Stray comma after opening brace or bracket"),
        category: Some("bracket"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_INVALID_ESCAPES": (
        pattern: r#"[^btnfru\"]"#,
        description: Some("Invalid escape sequences"),
        category: Some("escape"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_BROKEN_UNICODE_ESCAPES": (
        pattern: r#"u[0-9a-fA-F]{1,3}[^0-9a-fA-F]"#,
        description: Some("Broken unicode escapes"),
        category: Some("escape"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_ORPHANED_STRING_VALUE": (
        pattern: r#"\bnull\s*,\s*\"[^\"]+\""#,
        description: Some("Orphaned string value after null"),
        category: Some("semantic"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_KEY_VALUE_MISALIGNED": (
        pattern: r#"\"\s*:\s*,\s*\""#,
        description: Some("Key-value misalignment"),
        category: Some("semantic"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_NAN_INFINITY": (
        pattern: r#"\b(NaN|Infinity|-Infinity)\b"#,
        description: Some("JavaScript-style NaN or Infinity"),
        category: Some("js_style"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_JS_COMMENTS": (
        pattern: r#"(//[^\n]*|/\*[\s\S]*?\*/)"#,
        description: Some("JavaScript-style comments"),
        category: Some("js_style"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_UNQUOTED_KEYS": (
        description: Some("Unquoted keys followed by colon"),
        category: Some("quote"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_KEY_TRAPS": (
        pattern: r#"\"[^\"]*\"\s*:\s*(,|])"#,
        description: Some("Key traps with invalid characters"),
        category: Some("structure"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_MARKDOWN_WRAPPER": (
        pattern: r#"(?s)```(?:json)?\s*(.*?)\s*```"#,
        description: Some("Markdown-wrapped JSON blocks"),
        category: Some("markdown"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_MARKDOWN_JSON_BLOCK": (
        pattern: r#"(?s)(?:^|\n)\s*```(?:json)?\s*(.*?)\s*```(?:\n|$)"#,
        description: Some("Fenced markdown JSON blocks"),
        category: Some("markdown"),
        enabled: Some(true),
        engine: Some("fancy"),
    ),
    "RE_NULL_SLOTS": (
        pattern: r#"(\":\s*)(,|\])"#,
        description: Some("Null slots like 'key': ,"),
        category: Some("semantic"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
    "RE_FALLBACK_ARTIFACTS": (
        pattern: r#"\s*,\s*(\"[^\"]*\")\s*,\s*"#,
        description: Some("Fallback artifacts between values"),
        category: Some("semantic"),
        enabled: Some(true),
        engine: Some("regex"),
    ),
}